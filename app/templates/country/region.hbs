<h3>{{model.name}}</h3>
<p class="text-lead">{{model.desc}}</p>

<div class='row row-space-top-3 row-space-6'>
  <div class='col-md-6'>
    <h4>Activities</h4>
    {{#each activity in activities}}
      {{activity-details activity=activity action='showMarker' param=activity}}
    {{else}}
      No plans yet.
    {{/each}}
    <h4>Lodging</h4>
  </div>

  {{view 'large-map' class='map-big col-md-6' activities=activities selectedMarker='highlightedMarker'}}
</div>
