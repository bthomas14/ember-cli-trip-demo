<div class="row">
  <div class="col-md-12 h3">{{model.name}}</div>

  <div class="col-md-12">
    {{view 'large-map' class='map-city row-space-4' places=breweryList selectedMarker=selectedMarker}}
  </div>

  <div class="col-md-4">
    <h4>Breweries &amp; Tap Rooms</h4>
    <div class="list-group">
    {{#each item in breweryList}}
      {{#link-to 'country.city.place' item.id classNames='list-group-item'}}
        <div class='item-name' {{action 'showMarker' item}}>
          {{item.name}}
        </div>
      {{/link-to}}
    {{else}}
      No breweries in database.
    {{/each}}
    </div>
  </div>

  <div class="col-md-8">
    {{outlet}}
  </div>

</div>
